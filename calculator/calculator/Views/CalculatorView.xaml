<Window x:Class="calculator.Views.CalculatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calculator.ViewModels"
        mc:Ignorable="d"
        Title="CalculatorView" Height="630" Width="400">
    <Window.DataContext>
        <local:CalculatorViewModel />
    </Window.DataContext>
    <Grid HorizontalAlignment="Left" Width="390" Margin="0,0,-5,-1">
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="75" />
            <RowDefinition Height="75" />
            <RowDefinition Height="75" />
            <RowDefinition Height="75" />
            <RowDefinition Height="75" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <!--연산 과정 출력 창-->
        <TextBlock x:Name="processTextBox"
                   Grid.ColumnSpan="4"
                   Margin="10,10,20,100"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Text="{Binding CalculationProcess}" 
                   FontSize="12" />
        
        <!--연산 결과 창-->
        <Label x:Name="resultLabel"
               Grid.ColumnSpan="4"
               Margin="0,0,20,0"
               Grid.Row="0"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               FontSize="30"
               Content="{Binding Result}"/>

        <!--숫자 버튼-->
        <Button x:Name="ZeroBtn"
                Grid.Column="1"
                Grid.Row="5"
                Content="0"
                Margin="5,5,5,-13"
                Grid.ColumnSpan="1"
                Foreground="Gray"
                Background="White"
                FontSize="30"
                Command="{Binding NumberCommand}"
                CommandParameter="0"/>
        <Button x:Name="OneBtn"
                Grid.Column="0"
                Grid.Row="4"
                Content="1"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Gray"
                Background="White"
                FontSize="30"
                Command="{Binding NumberCommand}"
                CommandParameter="1"/>
        <Button x:Name="TwoBtn"
                Grid.Column="1"
                Grid.Row="4"
                Content="2"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Gray"
                Background="White"
                FontSize="30"
                Command="{Binding NumberCommand}"
                CommandParameter="2"/>
        <Button x:Name="ThreeBtn"
                Grid.Column="2"
                Grid.Row="4"
                Content="3"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Gray"
                Background="White"
                FontSize="30"
                Command="{Binding NumberCommand}"
                CommandParameter="3"/>
        <Button x:Name="FourBtn"
                Grid.Column="0"
                Grid.Row="3"
                Content="4"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Gray"
                Background="White"
                FontSize="30"
                Command="{Binding NumberCommand}"
                CommandParameter="4"/>
        <Button x:Name="FiveBtn"
                Grid.Column="1"
                Grid.Row="3"
                Content="5"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Gray"
                Background="White"
                FontSize="30"
                Command="{Binding NumberCommand}"
                CommandParameter="5"/>
        <Button x:Name="SixBtn"
                Grid.Column="2"
                Grid.Row="3"
                Content="6"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Gray"
                Background="White"
                FontSize="30"
                Command="{Binding NumberCommand}"
                CommandParameter="6"/>
        <Button x:Name="SevenBtn"
                Grid.Column="0"
                Grid.Row="2"
                Content="7"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Gray"
                Background="White"
                FontSize="30"
                Command="{Binding NumberCommand}"
                CommandParameter="7"/>
        <Button x:Name="EightBtn"
                Grid.Column="1"
                Grid.Row="2"
                Content="8"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Gray"
                Background="White"
                FontSize="30"
                Command="{Binding NumberCommand}"
                CommandParameter="8"/>
        <Button x:Name="NineBtn"
                Grid.Column="2"
                Grid.Row="2"
                Content="9"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Gray"
                Background="White"
                FontSize="30"
                Command="{Binding NumberCommand}"
                CommandParameter="9"/>

        <!--기호 버튼-->
        <Button x:Name="DotBtn"
                Grid.Column="2"
                Grid.Row="5"
                Content="."
                Margin="5,5,5,-13"
                Grid.ColumnSpan="1"
                Foreground="Gray"
                Background="White"
                FontSize="30"
                Command="{Binding DotCommand}"
                CommandParameter="0"/>
        <Button x:Name="SymbolBtn"
                Grid.Column="0"
                Grid.Row="5"
                Content="+/-"
                Margin="5,5,5,-13"
                Grid.ColumnSpan="1"
                Foreground="Gray"
                Background="White"
                FontSize="30"
                Command="{Binding SymbolCommand}"
                CommandParameter="0"/>

        <!--연산 버튼-->
        <Button x:Name="EqulBtn"
                Grid.Column="3"
                Grid.Row="5"
                Content="="
                Margin="5,5,5,-13"
                Grid.ColumnSpan="1"
                Foreground="Black"
                Background="Gray"
                FontSize="30"
                Command="{Binding EqualCommand}"/>
        <Button x:Name="PlusBtn"
                Grid.Column="3"
                Grid.Row="4"
                Content="+"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Black"
                Background="Gray"
                FontSize="30"
                Command="{Binding PlusCommand}"/>
        <Button x:Name="MinusBtn"
                Grid.Column="3"
                Grid.Row="3"
                Content="-"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Black"
                Background="Gray"
                FontSize="30"
                Command="{Binding MinusCommand}"/>
        <Button x:Name="MulBtn"
                Grid.Column="3"
                Grid.Row="2"
                Content="x"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Black"
                Background="Gray"
                FontSize="30"
                Command="{Binding MultiplyCommand}"/>
        <Button x:Name="DivBtn"
                Grid.Column="3"
                Grid.Row="1"
                Content="/"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Black"
                Background="Gray"
                FontSize="30"
                Command="{Binding DivideCommand}"/>

        <!--기타부호-->
        <Button x:Name="DeleteBtn"
                Grid.Column="2"
                Grid.Row="1"
                Content="C"
                Margin="5,5,5,5"
                Grid.ColumnSpan="1"
                Foreground="Black"
                Background="Gray"
                FontSize="30"
                Command="{Binding DeleteCommand}"/>
    </Grid>
</Window>
